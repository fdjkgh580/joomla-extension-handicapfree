<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>plgSystemHandicapfree</name>
    <author>Jason</author>
    <creationDate>2018-08-06</creationDate>
    <authorEmail>fdjkgh580@gmail.com</authorEmail>
    <version>1.2.2</version>
    <description>無障礙檢查</description>
    <files>
        <folder plugin="handicapfree">assets</folder>
        <folder plugin="handicapfree">vendor</folder>

        <filename plugin="handicapfree">composer.json</filename>
        <filename plugin="handicapfree">composer.lock</filename>
        <filename plugin="handicapfree">handicapfree.php</filename>
        <filename plugin="handicapfree">package.json</filename>
        <filename plugin="handicapfree">README.md</filename>
        <filename plugin="handicapfree">webpack.config.js</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="match-url" type="textarea" default="" label='斷行分隔要啟用比對的路徑，開頭不含斜線或反斜線' description="例如啟用網址是 「http://domain/administrator/index.php?option=com_blog...」 那麼請填入 「administrator/index.php?option=com_blog...」" rows="50" cols="20" />
            </fieldset>
        </fields>
    </config>
    
</extension>